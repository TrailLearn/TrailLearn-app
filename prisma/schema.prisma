// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum DvpStatus {
  DRAFT
  COMPLETED
}

model DvpRecord {
  id                String    @id @default(cuid())
  userId            String
  status            DvpStatus @default(DRAFT)
  data              Json      @default("{}") // Flexible JSONB storage for DVP content
  calculationResult Json?     // Snapshot of the diagnostic result
  rulesVersion      String?   // Version of rules used for calculation
  createdAt         DateTime  @default(now())
  updatedAt         DateTime  @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

// Necessary for Next auth
model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String? // @db.Text
  access_token             String? // @db.Text
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String? // @db.Text
  session_state            String?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  refresh_token_expires_in Int?

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum UserRole {
  USER
  ADMIN
}

enum OnboardingStatus {
  PENDING
  COMPLETED
}

model User {
  id            String      @id @default(cuid())
  name          String?
  email         String?     @unique
  emailVerified DateTime?
  image         String?
  password      String?
  role          UserRole    @default(USER)
  onboardingStatus OnboardingStatus @default(PENDING)
  onboardingVersion Int     @default(0)
  preferences   Json        @default("{}") // Stores conversational fragments (city, budget, etc.)
  lastActiveAt  DateTime    @default(now())
  accounts      Account[]
  sessions      Session[]
  messages      ChatMessage[]
  dvpRecords    DvpRecord[]
  auditLogs     AuditLog[]
  clarityIndices ClarityIndex[]
  hypotheses    Hypothesis[]
  dvpBSnapshots DvpBSnapshot[]
  actionPlan    ActionPlan?
  notifications Notification[]
  beingProfile  BeingProfile?
  shadowProfile ShadowProfile?
  aiOrientations AiOrientation[]
  aiOpportunities AiOpportunity[]
}

model BeingProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  
  // Experience Texture & Values
  values            Json     @default("[]") // Archeology of values
  meaningScale      Int?     // Jauge de Sens Perçu (0-100)
  complexityLevel   Int?     // Sélecteur de Complexité Cognitive (0-100)
  psychologicalSafety Int?   // Métrique de Sécurité Psychologique (0-100)

  // Evolutionary Kinetics
  vitalRenewalRate  Int?     // TRV in months (legacy)
  trvFrequency      Int?     // Frequency in months
  trvLabel          String?  // e.g., "6 months", "1 year"
  growthArchetype   String?  // e.g., "Cyclic Explorer"
  kineticSignature  Json?    // Curves/Intentions

  // Shadow Zone (Protection)
  sabotagePatterns  Json     @default("[]") // Self-Sabotage Modes
  exposureTolerance Int?     // Seuil de Tolérance à l'Exposition (0-100)
  shadowTriggers    Json     @default("[]") // Emotional/Systemic triggers

  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ShadowProfile {
  id                String   @id @default(cuid())
  userId            String   @unique
  
  // Encrypted Data
  fears             String?  @db.Text // JSON encrypted
  vulnerabilities   String?  @db.Text // JSON encrypted
  
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  // No direct relation to User exposed to public API if possible, 
  // but Prisma requires relation for integrity. 
  // We will enforce access via Service only.
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ChatMessage {
  id        String   @id @default(cuid())
  userId    String
  role      String   // "user", "assistant", "system"
  content   String   @db.Text
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([createdAt])
}

model BusinessRule {
  id          String   @id @default(cuid())
  key         String   @unique
  value       Json
  category    String
  version     String   @default("1.0.0")
  description String?
  updatedAt   DateTime @updatedAt
  updatedBy   String?

  @@index([category])
}

model AuditLog {
  id          String   @id @default(cuid())
  entityType  String   // e.g., "BusinessRule"
  entityId    String
  action      String   // e.g., "UPDATE"
  details     Json?    // e.g., { old: ..., new: ..., reason: ... }
  userId      String
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([entityId])
  @@index([userId])
}

model RuleVersion {
  id          String         @id @default(cuid())
  version     String         @unique // e.g., "1.0.0"
  description String?        // Description of the heuristic/logic changes
  isActive    Boolean        @default(false)
  createdAt   DateTime       @default(now())
  
  clarityIndices ClarityIndex[]
}

model ClarityIndex {
  id            String   @id @default(cuid())
  userId        String
  score         Int      // Score out of 100
  details       Json?    // Breakdown of the score (e.g., completeness, coherence)
  ruleVersionId String
  source        String   // "USER_INPUT" | "RULE_UPDATE"
  createdAt     DateTime @default(now())
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  ruleVersion RuleVersion @relation(fields: [ruleVersionId], references: [id])

  @@index([userId])
  @@index([ruleVersionId])
}

model Hypothesis {
  id               String   @id @default(cuid())
  userId           String
  title            String   // e.g., "MBA at Harvard"
  description      String?  @db.Text
  feasibilityScore Int      // 0-100
  isPreferred      Boolean  @default(false)
  details          Json?    // Specific parameters (budget, city, etc.)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DvpBSnapshot {
  id          String   @id @default(cuid())
  userId      String
  summary     String   @db.Text
  finalScore  Int
  data        Json     // Structured extracted data
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

enum PlanStatus {
  DRAFT
  ACTIVE
  ARCHIVED
}

model ActionPlan {
  id        String     @id @default(cuid())
  userId    String     @unique // One plan per user for now
  status    PlanStatus @default(DRAFT)
  tasks     Task[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum TaskStatus {
  PENDING
  DONE
  SKIPPED
}

enum TaskPriority {
  HIGH
  MEDIUM
  LOW
}

model Task {
  id           String       @id @default(cuid())
  actionPlanId String
  title        String
  description  String?      @db.Text
  status       TaskStatus   @default(PENDING)
  priority     TaskPriority @default(MEDIUM)
  dueDate      DateTime?
  evidenceUrl  String?      // Proof upload URL
  userFeedback String?      // Narrative feedback
  createdAt    DateTime     @default(now())
  updatedAt    DateTime     @updatedAt

  actionPlan ActionPlan @relation(fields: [actionPlanId], references: [id], onDelete: Cascade)

  @@index([actionPlanId])
}

model Notification {
  id        String   @id @default(cuid())
  userId    String
  message   String
  type      String   // "RE_OPTIMIZE" | "INFO"
  isRead    Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model SafetyLog {
  id          String   @id @default(cuid())
  userId      String?  // Optional: User might be anonymous or unauthenticated
  riskType    String   // "Jailbreak", "Medical", "Violence", "Legal"
  userInput   String?  @db.Text // Redacted/Minimized input if possible
  aiResponse  String?  @db.Text
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([riskType])
}

model AiOrientation {
  id                String   @id @default(cuid())
  userId            String
  inputs            Json     // Domain, Level, Skills, Languages, Budget, Salary, Mobility
  output            Json     // Recommended Jobs, Environments, Skills Gaps, Action Plan
  isPreferred       Boolean  @default(false)
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model AiOpportunity {
  id                String   @id @default(cuid())
  userId            String
  orientationId     String?  // Link to the orientation that triggered this
  inputs            Json     // Target Job, Target Environment, Horizon, Constraints
  output            Json     // Schools, Scholarships, Certifications, Projects, Weekly Plan
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([orientationId])
}
